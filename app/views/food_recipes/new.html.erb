<div class="gen-form-container cont">
  <h1 class="mg-b"><%= @recipe.name %></h1>
  <!-- Add ingredient form -->
  <%= form_for [@recipe, @food_recipe], url: recipe_food_recipes_path(@recipe), local: true, method: :post do |form| %>
  <div class="form-group">
    <%= form.label :food_id, 'Food' %>
    <%= form.collection_select :food_id, @foods,:id , :name, prompt: 'Select a food', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: 'form-control' %>
  </div>
  
  <!-- Hidden input for recipe_id -->
  <%= form.hidden_field :recipe_id, value: @recipe.id %>


  <div class="form-actions">
    <%= form.submit 'Add Ingredient', class: 'btn btn-primary' %>
  </div>
<% end %>

</div>